<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard">
    <Color x:Key="tColorRaw">#0B328C</Color>
    <Color x:Key="fColorRaw">#BC3823</Color>
    <SolidColorBrush x:Key="tColor" Color="{DynamicResource tColorRaw}" />
    <SolidColorBrush x:Key="fColor" Color="{DynamicResource fColorRaw}" />
    <Color x:Key="fontTColorRaw">#feb80c</Color>
    <Color x:Key="fontFColorRaw">#feb80c</Color>
    <SolidColorBrush x:Key="fontTColor" Color="{DynamicResource fontTColorRaw}" />
    <SolidColorBrush x:Key="fontFColor" Color="{DynamicResource fontFColorRaw}" />

    <sys:Double x:Key="minOpacityValue">0.2</sys:Double>
    <sys:Double x:Key="goodOpacityValue">0.7</sys:Double>
    <SolidColorBrush
        x:Key="mainTimeFontColor"
        Opacity="1"
        Color="{DynamicResource fontTColorRaw}" />
    <SolidColorBrush
        x:Key="mainBackColor"
        Opacity="1"
        Color="{DynamicResource tColorRaw}" />
    <Style TargetType="Ellipse">
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="24"
                    ShadowDepth="-4"
                    Color="#000" />
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>