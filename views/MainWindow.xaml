<Window
    x:Class="DesktopTools.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SelfWindow"
    Title="浮窗"
    Width="Auto"
    Height="Auto"
    AllowsTransparency="True"
    Background="Transparent"
    Closed="Window_Closed"
    FontFamily="{StaticResource clockicons}"
    Left="0"
    Loaded="Window_Loaded"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Top="0"
    Topmost="True"
    WindowStartupLocation="Manual"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="Storyboard2">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DateNumber" Storyboard.TargetProperty="(UIElement.Visibility)">
                <DiscreteObjectKeyFrame
                    x:Name="discreteObjectKeyFrame"
                    KeyTime="00:00:00.1"
                    Value="{x:Static Visibility.Collapsed}" />
            </ObjectAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.2" Value="G" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.3" Value="G" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.4" Value="Go" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.5" Value="Goo" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.6" Value="Good" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.7" Value="Goodb" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.8" Value="Goodby" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:00.9" Value="Goodbye" />
            </StringAnimationUsingKeyFrames>
            <StringAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Text)">
                <DiscreteStringKeyFrame KeyTime="00:00:01.1" Value="Goodbye" />
            </StringAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="Storyboard1" Completed="Replay">
            <ColorAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)">
                <EasingColorKeyFrame KeyTime="00:00:00" Value="White" />
                <EasingColorKeyFrame KeyTime="00:00:01" Value="Red" />
                <EasingColorKeyFrame KeyTime="00:00:02" Value="LightGreen" />
                <EasingColorKeyFrame KeyTime="00:00:03" Value="Blue" />
            </ColorAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="stackPanel" Storyboard.TargetProperty="(FrameworkElement.Width)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="130" />
                <EasingDoubleKeyFrame KeyTime="00:00:01.5" Value="500" />
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="130" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="stackPanel" Storyboard.TargetProperty="(FrameworkElement.Height)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="60" />
                <EasingDoubleKeyFrame KeyTime="00:00:01.5" Value="120" />
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="60" />
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="TimeNumber" Storyboard.TargetProperty="(TextBlock.FontSize)">
                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="34" />
                <EasingDoubleKeyFrame KeyTime="00:00:01.5" Value="160" />
                <EasingDoubleKeyFrame KeyTime="00:00:03" Value="34" />
            </DoubleAnimationUsingKeyFrames>

        </Storyboard>
    </Window.Resources>
    <Grid
        x:Name="AlwaysShowLayout"
        MouseDown="ToggleKeyMapPanel"
        RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform />
                <SkewTransform />
                <RotateTransform />
                <TranslateTransform />
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Background" Value="Transparent" />
            </Style>
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border
            x:Name="border"
            Grid.Row="0"
            Grid.Column="1"
            CornerRadius="5"
            Cursor="Arrow">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Cursor" Value="Arrow" />
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Opacity="0.5" Color="Black" />
                        </Setter.Value>
                    </Setter>
                </Style>
            </Border.Style>
            <StackPanel
                x:Name="stackPanel"
                Width="130"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    Name="TimeNumber"
                    Height="Auto"
                    Margin="0,4,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="30"
                    FontWeight="Bold"
                    Foreground="White"
                    Text=""
                    TextAlignment="Center" />
                <TextBlock
                    x:Name="DateNumber"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="White"
                    Text=""
                    TextAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
