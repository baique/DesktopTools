<Application
    x:Class="DesktopTools.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=netstandard"
    StartupUri="views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/resource/ColorTheme10.xaml" />
                <ResourceDictionary>
                    <FontFamily x:Key="clockicons">pack://application:,,,/resource/font/#clockicons</FontFamily>
                    <FontFamily x:Key="Aa破竹体">pack://application:,,,/resource/font/#Aa破竹体</FontFamily>

                    <Image x:Key="application_icon" Source="pack://application:,,,/icon.ico" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <sys:Double x:Key="OpacityValue">0.8</sys:Double>
            <SolidColorBrush
                x:Key="DefOpacityValue"
                Opacity="{DynamicResource OpacityValue}"
                Color="Black" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
