<Application
    x:Class="DesktopTools.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <FontFamily x:Key="clockicons">pack://application:,,,/font/#clockicons</FontFamily>
                    <FontFamily x:Key="Aa破竹体">pack://application:,,,/font/#Aa破竹体</FontFamily>
                    <SolidColorBrush
                        x:Key="OpacityValue"
                        Opacity="0.5"
                        Color="Black" />
                    <SolidColorBrush
                        x:Key="FontColor"
                        Opacity="1"
                        Color="White" />
                    <Image x:Key="application_icon" Source="pack://application:,,,/icon.ico" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
